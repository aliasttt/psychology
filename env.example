# Django Settings
DEBUG=False
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=psychotherapy-clinic.com,www.psychotherapy-clinic.com,localhost,127.0.0.1

# Database
DB_NAME=psychology_db
DB_USER=psychology_user
DB_PASSWORD=your-secure-db-password-here
DB_HOST=localhost
DB_PORT=5432

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=your-email@gmail.com

# Timezone
TIMEZONE=Europe/Istanbul

# Security
CSRF_TRUSTED_ORIGINS=https://psychotherapy-clinic.com,https://www.psychotherapy-clinic.com

# Static & Media
STATIC_ROOT=/var/www/static
MEDIA_ROOT=/var/www/media
